<UserControl x:Class="CombatAnalysis.App.UserControls.SystemMessageChat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CombatAnalysis.App.UserControls"
            mc:Ignorable="d" Name="systemMessageChat">
    
    <Border CornerRadius="10" Padding="10 7" HorizontalAlignment="Left" Margin="45 5 0 0"
            BorderBrush="#9AA6B2" BorderThickness="1">
        <TextBlock Text="{Binding ElementName=systemMessageChat, Path=Message}" FontSize="14" Foreground="#ffff" VerticalAlignment="Center" Margin="3 0 3 2"/>
    </Border>
</UserControl>
