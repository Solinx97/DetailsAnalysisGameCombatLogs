<UserControl x:Class="CombatAnalysis.App.UserControls.UserChat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CombatAnalysis.App.UserControls"
             mc:Ignorable="d" Name="userChat">
    
    <StackPanel Orientation="Horizontal" Margin="0 0 0 -5">
        <Border CornerRadius="50" Width="30" Height="30">
            <Border.Background>
                <ImageBrush ImageSource="{Binding ElementName=userChat, Path=Image}"/>
            </Border.Background>
        </Border>

        <TextBlock Text="{Binding ElementName=userChat, Path=Username}" Margin="15 0 0 0" FontSize="12" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
