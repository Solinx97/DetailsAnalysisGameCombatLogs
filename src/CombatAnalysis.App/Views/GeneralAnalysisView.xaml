<views:MvxWpfView
      xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
      xmlns:mvx="clr-namespace:MvvmCross.Platforms.Wpf.Binding;assembly=MvvmCross.Platforms.Wpf"
      x:Class="CombatAnalysis.App.Views.GeneralAnalysisView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CombatAnalysis.App.Views"
      xmlns:viewModels="clr-namespace:CombatAnalysis.Core.ViewModels;assembly=CombatAnalysis.Core"
      xmlns:uc="clr-namespace:CombatAnalysis.App.UserControls"
      mc:Ignorable="d" d:DesignHeight="850" d:DesignWidth="1250">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55"/>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ContentControl Grid.RowSpan="2" Grid.ColumnSpan="3" Content="{Binding BasicTemplate}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewModels:BasicTemplateViewModel}">
                    <local:BasicTemplateView />
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
        
        <StackPanel Grid.ColumnSpan="3" Grid.Row="0" Orientation="Horizontal"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 25">
            <Button Content="Подробнее" Height="30" Width="100"
                    mvx:Bi.nd="Command ShowDetailsCommand" Foreground="ForestGreen" Style="{StaticResource showButton}"/>
            <TextBlock Name="tes11" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" 
                       Text="Анализ" FontSize="18" FontWeight="Bold"
                       Margin="100 0" Style="{StaticResource titleText}">
            </TextBlock>
            <!--<ComboBox Width="150" ItemsSource="{Binding Players}" SelectedIndex="{Binding PlayerIndex}" />-->
        </StackPanel>
        <ListBox Grid.Row="1" Grid.Column="2" ItemsSource="{Binding Combats}"
                 Margin="50" SelectedIndex="{Binding CombatIndex}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="350"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="5"  HorizontalAlignment="Center">
                            <uc:CombatDataItem Title="{Binding Name}" Icon="Information" Color1="Blue" />
                            <uc:CombatDataItem Title="{Binding DamageDone}" Icon="Sword" Color1="Gray" />
                            <uc:CombatDataItem Title="{Binding HealDone}" Icon="Plus" Color1="Green" />
                            <uc:CombatDataItem Title="{Binding IsWin}" Icon="CalendarWeek" Color1="Orange" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5"  HorizontalAlignment="Center">
                            <uc:CombatDataItem Title="{Binding DamageTaken}" Icon="Shield" Color1="Black" />
                            <uc:CombatDataItem Title="{Binding DeathNumber}" Icon="DeathlyHallows" Color1="Red" />
                            <uc:CombatDataItem Title="{Binding EnergyRecovery}" Icon="Resistor" Color1="Purple" />
                            <uc:CombatDataItem Title="{Binding UsedBuffs}" Icon="MaterialDesign" Color1="Brown" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</views:MvxWpfView>
