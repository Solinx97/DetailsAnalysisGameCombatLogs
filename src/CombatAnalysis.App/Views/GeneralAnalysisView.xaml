<views:MvxWpfView
    x:Class="CombatAnalysis.App.Views.GeneralAnalysisView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="clr-namespace:CombatAnalysis.App.Converters"
    xmlns:uc="clr-namespace:CombatAnalysis.App.UserControls"
    xmlns:local="clr-namespace:CombatAnalysis.App.Views"
    xmlns:viewModels="clr-namespace:CombatAnalysis.Core.ViewModels;assembly=CombatAnalysis.Core"
    xmlns:mvx="clr-namespace:MvvmCross.Platforms.Wpf.Binding;assembly=MvvmCross.Platforms.Wpf"
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    mc:Ignorable="d" d:DesignHeight="850" d:DesignWidth="1250">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55"/>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <converters:TheNativeBoolToVisibilityConverter x:Key="BoolToVisibility" />
            <converters:TheNativeIntToVisibilityConverter x:Key="IntToVisibility" />
        </Grid.Resources>
        
        <ContentControl Grid.RowSpan="4" Grid.ColumnSpan="3" Content="{Binding BasicTemplate}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewModels:BasicTemplateViewModel}">
                    <local:BasicTemplateView />
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
        
        <StackPanel Grid.Column="3" Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Подробнее" Height="45" Width="125" FontSize="16"
                    mvx:Bi.nd="Command ShowDetailsCommand" Foreground="ForestGreen" Style="{StaticResource showButton}"/>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" 
                       Text="Анализ" FontSize="18" FontWeight="Bold"
                       Margin="100 0" Style="{StaticResource titleText}"/>
            <StackPanel Visibility="{Binding ResponseStatus, Converter={StaticResource IntToVisibility}, ConverterParameter=true:3}">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                       Text="Не удалось сохранить данные. Повторить?" Foreground="Brown" FontSize="13" FontWeight="Bold"
                       TextWrapping="Wrap" Margin="10 0" Style="{StaticResource titleText}"/>
                <Button Content="Повторить" FontSize="14" Width="100"
                        mvx:Bi.nd="Command RepeatSaveCommand" Foreground="BlueViolet" Style="{StaticResource showButton}"/>
            </StackPanel>
        </StackPanel>
        
        <ListBox Grid.Row="2" Grid.Column="2" ItemsSource="{Binding Combats}"
                 Margin="20" SelectedIndex="{Binding CombatIndex}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="350"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="5"  HorizontalAlignment="Center">
                            <uc:CombatDataItem Title="{Binding Path=Name}" Icon="Information" Color1="Blue" />
                            <uc:CombatDataItem Title="{Binding Path=DamageDone}" Icon="Sword" Color1="Gray" />
                            <uc:CombatDataItem Title="{Binding Path=HealDone}" Icon="Plus" Color1="Orange" />
                            <uc:CombatDataItem Title="Победа" Icon="CalendarWeek" 
                                               Visibility="{Binding Path=IsWin, Converter={StaticResource BoolToVisibility}, ConverterParameter=true}" Color1="Green" />
                            <uc:CombatDataItem Title="Поражение" Icon="CalendarWeek" 
                                               Visibility="{Binding Path=IsWin, Converter={StaticResource BoolToVisibility}, ConverterParameter=true:true}" Color1="Red" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5"  HorizontalAlignment="Center">
                            <uc:CombatDataItem Title="{Binding Path=DamageTaken}" Icon="Shield" Color1="Black" />
                            <uc:CombatDataItem Title="{Binding Path=DeathNumber}" Icon="DeathlyHallows" Color1="Red" />
                            <uc:CombatDataItem Title="{Binding Path=EnergyRecovery}" Icon="Resistor" Color1="Purple" />
                            <uc:CombatDataItem Title="{Binding Path=UsedBuffs}" Icon="MaterialDesign" Color1="Brown" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</views:MvxWpfView>
