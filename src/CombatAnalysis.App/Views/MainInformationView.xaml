                </StackPanel>
            </Grid>
        </Border>-->

        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Text="Получение информации о бое" FontSize="16" Margin="0 30" Style="{StaticResource titleText}"/>
        <StackPanel IsEnabled="{Binding IsLoading, Converter={StaticResource BoolToXAMLBool}}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Width="375" Margin="20">
            <TextBlock HorizontalAlignment="Center" Text="Загрузить файл с данными о бое" Margin="0 20" FontSize="16" />
            <Button mvx:Bi.nd="Command GetCombatLogCommand" Content="Загрузить" Width="100" FontSize="16"
                    Margin="15 0" Style="{StaticResource showButton}" />
            <StackPanel Orientation="Horizontal" Margin="20">
                <TextBlock Text="Файл:" FontSize="16" />
                <TextBlock Text="{Binding CombatLog, Mode=TwoWay}" FontWeight="Bold" Margin="20 0" FontSize="14" />
            </StackPanel>
        </StackPanel>
        <StackPanel IsEnabled="{Binding IsLoading, Converter={StaticResource BoolToXAMLBool}}" Grid.Row="2"
                    VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Height="35" Content="Показать" Width="100"
                    IsEnabled="{Binding CombatLog, Converter={StaticResource ToXAMLBool}}" FontSize="16" Margin="10"
                    mvx:Bi.nd="Command OpenPlayerAnalysisCommand" Style="{StaticResource showButton}" />
            <TextBlock Width="150" Text="Загрузка данных..." FontSize="16"
                       Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                       Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}" />
        </StackPanel>
    </Grid>
</views:MvxWpfView>
