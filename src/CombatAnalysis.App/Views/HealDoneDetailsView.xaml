<views:MvxWpfView
      xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
      xmlns:mvx="clr-namespace:MvvmCross.Platforms.Wpf.Binding;assembly=MvvmCross.Platforms.Wpf"
      x:Class="CombatAnalysis.App.Views.HealDoneDetailsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CombatAnalysis.App.Views"
      xmlns:viewModels="clr-namespace:CombatAnalysis.Core.ViewModels;assembly=CombatAnalysis.Core"
      xmlns:converters="clr-namespace:CombatAnalysis.App.Converters"
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" d:DesignHeight="850" d:DesignWidth="1250">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.16*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55"/>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <converters:TheNativeBoolToVisibilityConverter x:Key="BoolToVisibility" />
        </Grid.Resources>
        
        <ContentControl Grid.ColumnSpan="3" Grid.RowSpan="4" Content="{Binding BasicTemplate}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewModels:BasicTemplateViewModel}">
                    <local:BasicTemplateView />
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>

        <StackPanel Grid.Column="3" Grid.Row="1" Margin="25">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Анализ исцеления"
                       Style="{StaticResource titleText}"/>
        </StackPanel>

        <ListBox Background="Transparent" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2"
                 Margin="25" ItemsSource="{Binding HealDoneInformations}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock FontSize="14" Text="{Binding Path=Time}" MinWidth="75" Margin="15" />
                        <StackPanel Orientation="Horizontal">
                            <StackPanel MinWidth="75" VerticalAlignment="Center" MaxHeight="40">
                                <Icon:PackIconMaterial Visibility="{Binding Path=IsCrit, Converter={StaticResource BoolToVisibility}, ConverterParameter=true}"
                                                   Kind="LightningBolt" Foreground="Orange" Style="{StaticResource menuButtonIcon}"/>
                                <Icon:PackIconMaterial Visibility="{Binding Path=IsFullOverheal, Converter={StaticResource BoolToVisibility}, ConverterParameter=true}"
                                                   Kind="PlusBox" Foreground="Red" Style="{StaticResource menuButtonIcon}"/>
                            </StackPanel>
                            <TextBlock FontSize="14" Text="{Binding Path=Value}" MinWidth="75" Margin="15" />
                        </StackPanel>
                        <TextBlock FontSize="14" Text="{Binding Path=FromPlayer}" MinWidth="175" Margin="15" />
                        <TextBlock FontSize="14" Text="{Binding Path=ToPlayer}" MinWidth="150" Margin="15" />
                        <TextBlock FontSize="14" Text="{Binding Path=SpellOrItem}" MinWidth="200" Margin="15" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Margin="25 0" Grid.Row="3" Grid.Column="3" Orientation="Horizontal">
            <StackPanel Margin="20 0" MinWidth="400">
                <StackPanel>
                    <CheckBox Name="dependency" Margin="5" VerticalContentAlignment="Center" 
                              Content="Показать крит. урон" IsChecked="{Binding IsShowCrit}" FontSize="18"
                              Height="30" VerticalAlignment="Center" FontWeight="SemiBold" />
                    <CheckBox Margin="25 5" VerticalContentAlignment="Center" Content="Показать только крит. урон" FontSize="18" Height="30" 
                              VerticalAlignment="Center" FontWeight="SemiBold" Visibility="{Binding ElementName=dependency, Path=IsChecked, Converter={StaticResource BoolToVisibility}, ConverterParameter=true}"
                              IsChecked="{Binding IsShowOnlyCrit}"/>
                </StackPanel>
                <StackPanel>
                    <CheckBox Name="dependency1" Margin="5" VerticalContentAlignment="Center" 
                              Content="Показать оверхил" IsChecked="{Binding IsShowOverheal}" FontSize="18"
                              Height="30" VerticalAlignment="Center" FontWeight="SemiBold" />
                    <CheckBox Margin="25 5" VerticalContentAlignment="Center" Content="Показать только оверхил" FontSize="18" Height="30" 
                              VerticalAlignment="Center" FontWeight="SemiBold" Visibility="{Binding ElementName=dependency1, Path=IsChecked, Converter={StaticResource BoolToVisibility}, ConverterParameter=true}"
                              IsChecked="{Binding IsShowOnlyOverheal}"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</views:MvxWpfView>
