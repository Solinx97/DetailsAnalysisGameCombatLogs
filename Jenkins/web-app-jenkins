pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'dotnet restore src/CombatAnalysis.WebApp/CombatAnalysis.WebApp.csproj'
                sh 'dotnet build src/CombatAnalysis.WebApp/CombatAnalysis.WebApp.csproj'
            }
        }
        stage('Tests') {
            steps {
                sh 'dotnet test tests/CombatAnalysis.Parser.Tests/CombatAnalysis.Parser.Tests.csproj'
            }
        }
    }
}