pipeline {
    agent any

    parameters {
        string defaultValue: "C:/inetpub/wwwroot/UserApi", name: "IIS_PATH"
        string defaultValue: "src/API/CombatAnalysis.UserApi/CombatAnalysis.UserApi.csproj", name: "PROJECT_PATH"
    }

    stages {
        stage('Build') {
            steps {
                bat "dotnet restore ${PROJECT_PATH}"
                bat "dotnet build ${PROJECT_PATH}"
            }
        }
        stage('Deploy to IIS') {
            steps {
                bat "C:/Windows/System32/inetsrv/appcmd stop site UserApi"
                bat "dotnet publish ${PROJECT_PATH} --output ${IIS_PATH}"
            }
        }
    }
}
