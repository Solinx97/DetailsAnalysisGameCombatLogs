pipeline {
    agent any

    parameters {
        string defaultValue: "ChatApi", name: "IIS_SITE_NAME"
        string defaultValue: "C:/inetpub/wwwroot/ChatApi", name: "IIS_PATH"
        string defaultValue: "src/API/CombatAnalysis.ChatAPi/CombatAnalysis.ChatAPi.csproj", name: "PROJECT_PATH"
    }

    stages {
        stage('Build') {
            steps {
                bat "dotnet restore ${PROJECT_PATH}"
                bat "dotnet build ${PROJECT_PATH}"
            }
        }
        stage('Stop IIS Site') {
            steps {
                bat "C:/Windows/System32/inetsrv/appcmd stop site ${IIS_SITE_NAME}"
            }
        }
        stage('Deploy to IIS') {
            steps {
                bat "dotnet publish ${PROJECT_PATH} --output ${IIS_PATH}"
            }
        }
        stage('Start IIS Site') {
            steps {
                bat "C:/Windows/System32/inetsrv/appcmd start site ${IIS_SITE_NAME}"
            }
        }
    }
}
