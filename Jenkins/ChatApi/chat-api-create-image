pipeline {
    agent any

    parameters {
        string defaultValue: "src/API/CombatAnalysis.ChatAPi/CombatAnalysis.ChatAPi.csproj", name: "PROJECT_PATH"
        string defaultValue: "tests/CombatAnalysis.Parser.Tests/CombatAnalysis.Parser.Tests.csproj", name: "TEST_PROJECT_PATH"
        string defaultValue: "src/API/CombatAnalysis.ChatApi/Dockerfile", name: "DOCKER_FILE_PATH"
        string defaultValue: "combat-analysis-chat-api", name: "DOCKER_IMAGE"
        string defaultValue: "latest", name: "DOCKER_IMAGE_VERSION"
        string defaultValue: "solinx", name: "DOCKER_HUB_LOGIN"
    }

    stages {
        stage('Build') {
            steps {
                bat "dotnet restore ${PROJECT_PATH}"
                bat "dotnet build ${PROJECT_PATH}"
            }
        }
        stage('Tests') {
            steps {
                bat "dotnet test ${TEST_PROJECT_PATH}"
            }
        }
        stage("Docker image build") {
            steps {
                bat "docker build -f ${DOCKER_FILE_PATH} --force-rm -t ${DOCKER_HUB_LOGIN}/${DOCKER_IMAGE}:${DOCKER_IMAGE_VERSION} ."
            }
        }
        stage("Docker image push") {
            steps {
                withCredentials([string(credentialsId: "docker-hub", variable: "dockerhubpwd")]) {
                    bat "docker login -u ${DOCKER_HUB_LOGIN} -p ${dockerhubpwd}"
                    bat "docker push ${DOCKER_HUB_LOGIN}/${DOCKER_IMAGE}:${DOCKER_IMAGE_VERSION}"
                }
            }
        }
    }
}
