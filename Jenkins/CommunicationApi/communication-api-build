pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                bat "dotnet restore src/API/CombatAnalysis.CommunicationApi/CombatAnalysis.CommunicationApi.csproj"
                bat "dotnet build src/API/CombatAnalysis.CommunicationApi/CombatAnalysis.CommunicationApi.csproj"
            }
        }
        stage('Tests') {
            steps {
                bat "dotnet test tests/CombatAnalysis.Parser.Tests/CombatAnalysis.Parser.Tests.csproj"
            }
        }
    }
}
