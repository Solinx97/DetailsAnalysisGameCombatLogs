pipeline {
    agent any

    stages {
        stage("Deploy to Minikube") {
            steps{
                bat "kubectl config use-context minikube"
                bat "helm upgrade web-app ./charts/web-app-chart -f ./charts/dockerImageTags.yaml -f ./charts/web-app-chart/values.yaml -n web-app"
            }
        }
    }
}
